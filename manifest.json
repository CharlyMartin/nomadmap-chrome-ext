{
  "name": "Nomadmap: Location Auto-Update",
  "description": "Automatically update your location on Nomadmap as you move around",
  "author": "Charly MARTIN",
  "version": "1.2.2",
  "manifest_version": 2,

  "permissions": [
    "storage",
    "alarms",
    "background",
    "geolocation",
    "notifications",
    "http://*/",
    "https://*/"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "160": "favicon.png"
  }
}
